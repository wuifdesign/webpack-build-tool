    "core-js": "^3.36.1",
    "css-loader": "^7.1.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-webpack-plugin": "^4.1.0",
    "filesize": "^10.1.1",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
